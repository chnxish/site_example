root = true

[*]
end_of_line = lf
insert_final_newline =  = true

[*]
charset = utf-8

[*.{c,cc,h,py,dart}]
indent_style = space
indent_size = 4

[*.{html,css,scss,js,json,dart,yaml,txt,sql}]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
indent_size = 8

